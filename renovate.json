{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "group:all", "schedule:weekly"],
  "ignorePaths": ["clients/**"],
  "automerge": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "ESLint packages"
    },
    {
      "matchPackagePatterns": ["jest"],
      "groupName": "Jest packages"
    }
  ]
}
