{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:all"
  ],
  "ignorePaths": [
    "clients/**"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "ESLint packages"
    },
    {
      "matchPackagePatterns": ["jest"],
      "groupName": "Jest packages"
    }
  ]
}
