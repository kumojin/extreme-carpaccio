{
  "name": "extreme-carpaccio-server",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "test": "turbo run test",
    "lint:fix": "biome check --write --no-errors-on-unmatched .",
