    "lint:ci": "biome ci --no-errors-on-unmatched ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "rimraf": "6.0.1",
    "turbo": "2.5.5"
  },
  "packageManager": "npm@11.5.2"
}
