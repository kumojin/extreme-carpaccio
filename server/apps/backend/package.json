{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "dev": "tsup src/main.ts --watch --onSuccess \"node dist/main.js\"",
    "build": "tsc && tsup src/main.ts",
    "start": "tscnode dist/main.js",
    "test": "vitest --run",
    "format:check": "biome format src",
    "format:fix": "biome format --write src",
    "lint:check": "biome lint src",
    "lint:fix": "biome lint --write src"
  },
  "dependencies": {
    "@types/big.js": "6.2.2",
    "@types/body-parser": "1.19.5",
    "@types/express": "4.17.21",
    "@types/lodash": "4.17.7",
    "argon2": "0.41.1",
    "big.js": "6.2.2",
    "body-parser": "1.20.3",
    "colors": "1.4.0",
    "cross-env": "7.0.3",
    "dotenv": "16.4.5",
    "express": "4.20.0",
    "http-status-codes": "2.3.0",
    "joi": "17.13.3",
    "lodash": "4.17.21",
    "sqlite": "5.1.1",
    "sqlite3": "5.1.7",
    "winston": "3.14.2"
  },
  "devDependencies": {
    "@swc/core": "1.7.25",
    "@tsconfig/node20": "20.1.4",
    "@types/node": "20.16.5",
    "@types/supertest": "6.0.2",
    "bower": "1.8.14",
    "node-mocks-http": "1.16.0",
    "supertest": "7.0.0",
    "tsup": "8.2.4",
    "typescript": "5.6.2",
    "vitest": "2.0.5"
  }
}
