{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "dev": "tsup src/main.ts --watch --onSuccess \"node dist/main.js\"",
    "build": "tsc && tsup src/main.ts",
    "start": "tscnode dist/main.js",
    "test": "vitest --run",
    "format:check": "npx biome format src",
    "format:fix": "npx biome format --write src",
    "lint:check": "npx biome lint src",
    "lint:fix": "npx biome lint --write src"
  },
  "dependencies": {
    "@types/big.js": "6.2.2",
    "@types/body-parser": "1.19.5",
    "@types/express": "5.0.1",
    "@types/lodash": "4.17.16",
    "argon2": "0.43.0",
    "big.js": "7.0.1",
    "body-parser": "2.2.0",
    "colors": "1.4.0",
    "cross-env": "7.0.3",
    "dotenv": "16.5.0",
    "express": "5.1.0",
    "http-status-codes": "2.3.0",
    "joi": "17.13.3",
    "lodash": "4.17.21",
    "sqlite": "5.1.1",
    "sqlite3": "5.1.7",
    "winston": "3.17.0"
  },
  "devDependencies": {
    "@swc/core": "1.11.22",
    "@tsconfig/node20": "20.1.5",
    "@types/node": "22.15.2",
    "@types/supertest": "6.0.3",
    "bower": "1.8.14",
    "node-mocks-http": "1.17.0",
    "supertest": "7.1.0",
    "tsup": "8.4.0",
    "typescript": "5.8.3",
    "vitest": "3.1.2"
  }
}
